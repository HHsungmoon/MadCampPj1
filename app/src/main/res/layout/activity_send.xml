<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendActivity"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Left side: Contacts text -->
        <TextView
            android:id="@+id/textViewContacts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|bottom"
            android:gravity="bottom|start"
            android:text="Send"
            android:textColor="@color/black2"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginStart="-30dp" />

<!--        <ImageButton-->
<!--            android:id="@+id/btnAddContact"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_gravity="end|bottom"-->
<!--            android:background="?attr/selectableItemBackgroundBorderless"-->
<!--            android:paddingStart="16dp"-->
<!--            android:paddingEnd="5dp"-->
<!--            android:paddingTop="16dp"-->
<!--            android:paddingBottom="10dp"-->
<!--            android:src="@drawable/ic_add"-->
<!--            app:tint="@color/black" />-->
    </androidx.appcompat.widget.Toolbar>

    <!-- Your ImageView with the image -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="409dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:src="@drawable/img_1"
        android:adjustViewBounds="true"/>

    <ImageButton
        android:id="@+id/btnAddImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="80dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/img" />

    <ImageView
        android:id="@+id/imageInput"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/image"
        android:layout_alignStart="@id/btnAddImg"
        android:layout_alignTop="@id/btnAddImg"
        android:layout_alignEnd="@id/btnAddImg"
        android:layout_alignBottom="@id/btnAddImg"/>

    <ImageButton
        android:id="@+id/btnAddTag"
        android:src="@drawable/igtag"
        app:tint="@color/white"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@id/editTextMessage"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="260dp"
        android:layout_marginBottom="-15dp"
        android:scaleType="fitCenter"
        android:background="@drawable/circle_shape"/>

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAddImg"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_round_border"
        android:hint="Add message"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/black" />

    <ImageButton
        android:id="@+id/btnAddPhoto"
        android:src="@drawable/send"
        android:background="@drawable/circle_shape"
        app:tint="@color/white"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_below="@id/editTextMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bottom_background"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_menu" />

</RelativeLayout>